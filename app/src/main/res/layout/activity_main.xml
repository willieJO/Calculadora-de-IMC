<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/backgroundMain"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewKg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:layout_gravity="center"
        android:text="@string/textPeso"
        android:textStyle="bold"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/editTextPesoId"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/textValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:padding="12dp"
        android:text="@string/textAltura"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/editTextAlturaId"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:padding="8dp"
        android:background="@color/white"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:textColor="#ffff"
        android:layout_gravity="center"
        android:text=""
        android:textSize="28dp"
        android:textAlignment="center" />
    <Button
        android:layout_marginTop="50dp"
        android:layout_width="180dp"
        android:id="@+id/buttonImcId"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:width="1dp"
        android:backgroundTint="@color/buttonImc"
        android:text="@string/botaoImc" />



</LinearLayout>